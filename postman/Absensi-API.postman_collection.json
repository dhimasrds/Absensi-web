            },
            "url": {
              "raw": "{{BASE_URL}}/api/mobile/auth/refresh",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "mobile", "auth", "refresh"]
            },
            "description": "Refresh mobile access token"
