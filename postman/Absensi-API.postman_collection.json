                  "    if (jsonData.data) {",
                  "        pm.environment.set('ADMIN_TOKEN', jsonData.data.accessToken);",
                  "        pm.environment.set('ADMIN_REFRESH_TOKEN', jsonData.data.refreshToken);",
                  "        console.log('‚úÖ Admin tokens refreshed');",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
